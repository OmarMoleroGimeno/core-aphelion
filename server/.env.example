# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Path to your Firebase service account key file
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Firebase Project Details (optional, already in serviceAccountKey.json)
FIREBASE_PROJECT_ID=prueba-ai-30212
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@prueba-ai-30212.iam.gserviceaccount.com


# ============================================
# OPENAI CONFIGURATION (IA)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model to use (recommended: gpt-4o, gpt-4o-mini, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o-mini


# ============================================
# GOOGLE OAUTH (Optional - for Google Login)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret


# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# JWT Secret for authentication tokens (change this to a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL for CORS and OAuth redirects
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173


# ============================================
# DATABASE CONFIGURATION (Optional - SQLite)
# ============================================
DB_PATH=./chat.db
